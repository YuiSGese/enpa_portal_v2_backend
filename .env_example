APP_NAME=EmpaPortalV2
APP_ENV=development
APP_DEBUG=True

# --- データベース接続設定 ---
# rootは開発用に一時的に使用
DB_USER=root
DB_PASS=root
# ローカルPC: 'localhost' (ソケット接続) を避け、127.0.0.1 を使用
# Docker ComposeでMariaDBを実行する場合 (サービス名 'mariadb') -> DB_HOST=mariadb
DB_HOST=127.0.0.1
DB_PORT=3307
DB_NAME=empa_portal_v2

# --- SQLAlchemy 設定 ---
DB_ECHO=false
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_RECYCLE=3600
DB_ISOLATION_LEVEL=READ COMMITTED

# JWT password hash 
SECRET_KEY="enpaportal"
TOKEN_PREFIX="Bearer "
TOKEN_EXPIRATION_AFTER=60
ALGORITHM="HS256"

